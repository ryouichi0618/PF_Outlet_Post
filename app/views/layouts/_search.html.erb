<% if @path.is('public/posts#index', 'public/search#search') %>
  <div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :selected, options_for_select({ "タイトルで検索" => "title", "本文で検索" => "content" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit '検索' %>
  </div>
  <% end %>
<% elsif @path.is('admin/posts#index', 'admin/search#search','admin/customers#index') %>
  <div class="search-form">
    <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :selected, options_for_select({ "タイトルで検索" => "title", "本文で検索" => "content", "ニックネームで検索" => "nickname", "紹介文で検索" => "info" }) %>
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
<% end %>