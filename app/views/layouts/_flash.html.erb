<% if notice %>
	<div class="flash notice">
	  <span class="text-success"><%= notice %></span>
	</div>
<% elsif flash[:success] %>
	<div class="flash success">
	  <% flash[:success]="ログインしました" %>
  	<span class="text-success"><%= flash[:success] %></span>
	</div>
<% elsif flash[:alert] %>
	<div class="flash danger">
	  <span class="text-danger"><%= flash[:alert] %></span>
	</div>
<% end %>
