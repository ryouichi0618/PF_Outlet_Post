<h1>投稿詳細画面です</h1>
<div class="border-bottom">
  <div class="container">
    <table class=table>
      <tbody>
        <tr>
          <td><%= @post.title %></td>
          <td><%= @post.created_at %></td>
        </tr>
        <tr>
          <td><%= attachment_image_tag(@post.customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
          <td><%= @post.body %></td>
        </tr>
        <tr>
          <td><%= link_to "削除する", post_path(@post) , class: "btn btn-outline-danger", method: :delete %></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-3 pt-3 border-right">
      <%= render "ansewer", post: @post, ansewer: @ansewer %>
    </div>
    <div class="col-6">
      <%= render "ansewer_index" %>
    </div>
  </div>
</div>