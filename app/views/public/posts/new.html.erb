<main class="post-new-bg ">
  <h1 class="heading text-center">みんなの悩みを投稿しよう</h1>
  <div class="container">
    <div class="row justify-content-center">

    <%= form_with model:@post, local:true do |f| %>
    <div class="field">
      <%= f.label :image, "画像（任意）" %><br>
      <%= f.attachment_field :image %>
    </div>

    <div class="field-title">
      <%= f.label :title, "タイトル(最大５０字)" %><br>
      <%= f.text_field :title, placeholder: "タイトル(最大５０字)" %>
    </div>

    <div class="field-body">
      <%= f.label :body, "本文" %><br>
      <%= f.text_area :body, rows:'7',placeholder: "投稿内容を入力してください" %>
    </div>

    <div class="actions text-center mt-4">
      <%= f.submit '投稿', class: "btn btn-warning font-italic" %>
    </div>

    <% end %>
    </div>
  </div>
</main>