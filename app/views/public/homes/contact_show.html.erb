<main class="notice-customer-show-bg">
  <div class="container-fluid">
    <div class="row">
      <div class="offset-1 col-2">
        投稿日時<br>
        <%= @notice.created_at.strftime('%Y/%m/%d (%H時%M分)') %>
      </div>
      <div class="offset-1 col-4">
        <table class="table table-dark text-center border-show-notice">
          <thead>
            <tr>
              <th>タイトル</th>
            </tr>
          </thead>
          <tbody>
            <tr class="table-dark">
              <td><%= @notice.title_notice %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="pt-5">
      <div class="offset-3 col-6">
        <table class="table table-dark text-center border-show-notice">
          <thead>
            <tr>
              <th>お知らせ内容</th>
            </tr>
          </thead>
          <tbody>
            <tr class="table-dark">
              <td><%= @notice.body_notice %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>