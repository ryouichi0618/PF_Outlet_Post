
<main class="post-edit-bg">
  <h1 class="heading text-center">投稿編集</h1>
  <div class="container">
    <div class="row justify-content-center">

    <%= form_with(model: [@post, @ansewer], url: post_post_ansewer_path(@post, @ansewer), local: true) do |f| %>

      <div class="field-body">
        <%= f.label :body, "本文" %><br>
        <%= f.text_area :body, rows:'7',placeholder: "編集内容を入力してください（最大1000字）" %>
      </div>

      <div class="actions text-center mt-4">
        <%= f.submit '投稿編集', class: "btn btn-warning font-italic" %>
      </div>

    <% end %>
    </div>
  </div>
</main>
